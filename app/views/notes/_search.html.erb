<%= form_with(url: notes_path, method: :get, local: true, class: "form-inline") do |form| %>
  <div class="form-group" class="row">
    <div class="col-md-6 col-lg-4 my-2">
      <%= form.label :search, "Search notes:", class: "mr-2" %>
      <%= form.text_field :search, class: "form-control mr-2", value: params[:search] %>
    </div>
  </div>
  <%= form.submit "Search", class: "btn btn-primary mt-2" %>
<% end %>
